{
  "name": "AI Bookmark Organizer",
  "description": "Organize your Chrome bookmarks using OpenAI",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["bookmarks", "storage", "tabs", "notifications"],
  "host_permissions": ["https://api.openai.com/*"],
  "action": {
    "default_title": "Bookmark Organizer",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 